#
# Build the docker image with `npx nx docker-build study-sphere`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t study-sphere`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system study-sphere && \
          adduser --system -G study-sphere study-sphere

COPY dist/apps/study-sphere study-sphere/
RUN chown -R study-sphere:study-sphere .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix study-sphere --omit=dev -f install

CMD [ "node", "study-sphere" ]
